{
    "name": "node-npcap",
    "version": "0.0.1",
    "packageManager": "pnpm@8.15.4",
    "description": "Native addon to capture & decode network packets.",
    "type": "module",
    "license": "MIT",
    "homepage": "https://github.com/ivanmaxlogiudice/npcap",
    "bugs": {
        "url": "https://github.com/ivanmaxlogiudice/npcap/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ivanmaxlogiudice/npcap.git"
    },
    "author": "Iván Máximiliano, Lo Giudice <ivanmaxlogiudice@gmail.com>",
    "files": [
        "*.d.ts",
        "binding.gyp",
        "dist",
        "lib"
    ],
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "scripts": {
        "preRebuild": "node-gyp rebuild",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "dev": "esno lib/index.ts",
        "stub": "unbuild --stub",
        "build": "pnpm build:src && pnpm build:lib",
        "build:lib": "node-gyp rebuild",
        "build:src": "unbuild",
        "prepublishOnly": "pnpm run build",
        "release": "bumpp && pnpm publish",
        "configure": "node-gyp configure"
    },
    "devDependencies": {
        "@ivanmaxlogiudice/eslint-config": "^1.0.24",
        "@types/node": "^20.11.20",
        "@vitest/coverage-v8": "^1.3.1",
        "bumpp": "^9.4.0",
        "eslint": "^8.57.0",
        "esno": "^4.0.0",
        "lint-staged": "^15.2.2",
        "rimraf": "^5.0.5",
        "simple-git-hooks": "^2.9.0",
        "typescript": "^5.3.3",
        "unbuild": "^2.0.0",
        "vitest": "^1.3.1"
    },
    "engines": {
        "node": ">=20.11.1"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
