{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ESNext",
        "lib": ["ESNext"],

        /* Modules */
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "paths": {
            "@/*": ["./lib/*"]
        },
        "resolveJsonModule": true,

        /* Type Checking */
        "strict": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        /* Emit */
        "declaration": true,
        "outDir": "dist",

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Completeness */
        "skipLibCheck": true
    },
    "include": ["lib", "tests"],
    "exclude": ["node_modules"]
}
