{
    "name": "node-npcap",
    "type": "module",
    "version": "0.1.0",
    "packageManager": "bun@1.2.21",
    "description": "Native addon to capture & decode network packets.",
    "author": "Iván Máximiliano, Lo Giudice <ivanmaxlogiudice@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/ivanmaxlogiudice/npcap",
    "repository": {
        "type": "git",
        "url": "https://github.com/ivanmaxlogiudice/npcap.git"
    },
    "bugs": {
        "url": "https://github.com/ivanmaxlogiudice/npcap/issues"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "*.d.ts",
        "binding.gyp",
        "deps",
        "dist",
        "lib"
    ],
    "engines": {
        "node": ">=22.19.0"
    },
    "scripts": {
        "preRebuild": "node-gyp rebuild -j max",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "dev": "esno examples/ethernet.ts",
        "stub": "unbuild --stub",
        "build": "bun build:src && bun build:lib",
        "build:lib": "node-gyp rebuild -j max",
        "build:src": "unbuild",
        "prepublishOnly": "bun run build",
        "release": "bumpp && bun publish",
        "configure": "node-gyp configure"
    },
    "devDependencies": {
        "@ivanmaxlogiudice/eslint-config": "^3.1.7",
        "@types/node": "^24.3.1",
        "@vitest/coverage-v8": "^3.2.4",
        "bumpp": "^10.2.3",
        "eslint": "^9.35.0",
        "esno": "^4.8.0",
        "lint-staged": "^16.1.6",
        "node-gyp": "^11.4.2",
        "rimraf": "^6.0.1",
        "simple-git-hooks": "^2.13.1",
        "typescript": "^5.9.2",
        "unbuild": "^3.6.1",
        "vitest": "^3.2.4"
    },
    "simple-git-hooks": {
        "pre-commit": "bun lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
